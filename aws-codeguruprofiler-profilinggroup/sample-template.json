{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Sample template for the AWS::CodeGuruProfiler::ProfilingGroup resource.",
  "Resources": {
    "MyProfilingGroup": {
      "Type": "AWS::CodeGuruProfiler::ProfilingGroup",
      "Properties": {
        "ProfilingGroupName": "MySampleProfilingGroup10",
        "ComputePlatform": "Default",
        "AnomalyDetectionNotificationConfiguration": [
          {
            "channelUri": "arn:aws:sns:us-east-1:977364881114:MyTopic"
          }
        ]
      }
    },
    "MyProfilingGroupWithDefaultComputePlatform": {
      "Type": "AWS::CodeGuruProfiler::ProfilingGroup",
      "Properties": {
        "ProfilingGroupName": "MyProfilingGroupWithDefaultComputePlatform10",
        "ComputePlatform": "Default",
        "AnomalyDetectionNotificationConfiguration": [
          {
            "channelUri": "arn:aws:sns:us-east-1:977364881114:MyTopic"
          }
        ]
      }
    },
    "MyProfilingGroupWithLambdaComputePlatform": {
      "Type": "AWS::CodeGuruProfiler::ProfilingGroup",
      "Properties": {
        "ProfilingGroupName": "MyProfilingGroupWithLambdaComputePlatform10",
        "ComputePlatform": "AWSLambda",
        "AnomalyDetectionNotificationConfiguration": [
          {
            "channelUri": "arn:aws:sns:us-east-1:977364881114:MyTopic"
          }
        ]
      }
    },
    "MyProfilingGroupWithAgentPermissions": {
      "Type": "AWS::CodeGuruProfiler::ProfilingGroup",
      "Properties": {
        "ProfilingGroupName": "MySampleProfilingGroupWithAgentPermissions10",
        "ComputePlatform": "Default",
        "AnomalyDetectionNotificationConfiguration": [
          {
            "channelUri": "arn:aws:sns:us-east-1:977364881114:MyTopic"
          }
        ],
        "AgentPermissions": {
          "Principals": [
            {
              "Fn::GetAtt": [
                "MyProfilingGroupRole",
                "Arn"
              ]
            }
          ]
        }
      }
    },
    "MyProfilingGroupRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "Ref": {
      "Description": "The Ref",
      "Value": {
        "Ref": "MyProfilingGroup"
      }
    },
    "GetAttArn": {
      "Description": "The GetAtt",
      "Value": {
        "Fn::GetAtt": [
          "MyProfilingGroup",
          "Arn"
        ]
      }
    }
  }
}
